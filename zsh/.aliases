# ==========
# = common =
# ==========
# {{{

alias pbcopy='xsel --clipboard --input'
alias rm='rm -i'
alias lp='leafpad'
alias ..='cd ..'
alias -g Z='~/.zshrc'
alias -g A='~/.config/nattoujam/dotfs/zsh/.aliases'
alias -g P='~/.config/nattoujam/dotfs/zsh/.zsh_private'

# ls
alias ls='ls --color=auto -h'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -lF'

# git
alias g='git'
alias gst='git status'
alias gsw='git switch'
alias gl='git log'
alias gr='git rebase'
alias gcan='git commit --amend --no-edit'

# docker
alias d='docker'
alias dc='docker-compose'
alias dps='docker ps -a --format "table {{.Names}}\t{{.Image}}\t{{.Status}}"'

# }}}

# kotlin
alias kotlinjar='kotlinc -include-runtime -d'

