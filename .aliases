# cd and ls
# https://qiita.com/b4b4r07/items/8cf5d1c8b3fbfcf01a5d
cd () {
  builtin cd "$@" && l
}

# edit ~/.*rc
edrc () {
  case $SHELL in
    *bash)
      vim ~/.bashrc
      ;;
    *zsh)
      vim ~/.zshrc
      ;;
    *)
      echo "Unsurported shell: $SHELL"
      exit 1
      ;; 
  esac
}

# source ~/.*rc
src () {
  case $SHELL in
    *bash)
      echo 'load ~/.bashrc ...'
      . ~/.bashrc
      ;;
    *zsh)
      echo 'load ~/.zshrc ...'
      . ~/.zshrc
      ;;
    *)
      echo "Unsurported shell: $SHELL"
      exit 1
      ;; 
  esac
}
